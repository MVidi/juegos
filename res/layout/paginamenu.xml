<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="empezarJuego" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/iconolebrijano" />

    <Button
        android:id="@+id/configurarPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amigosPM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/configurar" />

    <Button
        android:id="@+id/amigosPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipopartidaPM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/amigos" />

    <Button
        android:id="@+id/tipopartidaPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jugarPM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/tipopartida" />

    <Button
        android:id="@+id/jugarPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:onClick="empezarJuego"
        android:text="@string/jugar" />

</RelativeLayout>
